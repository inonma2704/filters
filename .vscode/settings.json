{
	"eslint.options": {
		"overrideConfigFile": "./eslint.config.js"
	},
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": [
		"source.fixAll"
	],
	"eslint.validate": [
		"javascript",
		"typescript",
		"javascriptreact",
		"typescriptreact"
	],
	"editor.renderWhitespace": "trailing",
	"eslint.useFlatConfig": true,
}